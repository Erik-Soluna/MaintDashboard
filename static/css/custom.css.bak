/* General Styles */
body {
  font-family: sans-serif;
  background-color: #222;
  color: #fff;
}

.equipment-overview-container {
  margin: 20px;
}

h1 {
  color: #fff;
  margin-bottom: 20px;
}

/* Table Controls */
.table-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.search-container {
  display: flex;
}

.search-container input[type="text"] {
  border-radius: 5px 0 0 5px;
  border-right: none;
}

.search-container button {
  border-radius: 0 5px 5px 0;
}

.filter-buttons button {
  margin-left: 5px;
}

.add-equipment-btn {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 8px 15px;
  cursor: pointer;
}

/* Table Styles */
.table-responsive {
  overflow-x: auto;
}

.table {
  width: 100%;
  border-collapse: collapse;
}

.table th,
.table td {
  padding: 12px 15px;
  text-align: left;
  border-bottom: 1px solid #444;
}

.table thead th {
  background-color: #333;
  color: #fff;
}

.table tbody tr:nth-child(even) {
  background-color: #333;
}

/* Pagination */
.pagination-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}

.pagination .page-link {
  color: #007bff;
  background-color: transparent;
  border: 1px solid #007bff;
}

.pagination .page-link:hover {
  background-color: #007bff;
  color: #fff;
}

.show-entries {
  display: flex;
  align-items: center;
}

.show-entries select {
  margin-left: 10px;
}

/* Navbar Styles */
.navbar-brand img {
  margin-right: 10px;
}

.navbar-text {
  margin-left: 10px;
}

/* Modal Styles */
.modal-content {
  background-color: #1e293b;
  color: #fff;
  border: 1px solid #334155;
}

.modal-header {
  border-bottom: 1px solid #334155;
}

.modal-title {
  color: #fff;
}

.modal-body {
  padding: 1rem;
}

.form-label {
  color: #cbd5e1;
  font-size: 0.875rem;
  margin-bottom: 0.25rem;
}

.form-control {
  background-color: #0f172a;
  color: #fff;
  border: 1px solid #334155;
  font-size: 0.875rem;
}

.form-control:focus {
  background-color: #1e293b;
  border-color: #475569;
  box-shadow: none;
}

.btn-secondary {
  background-color: #334155;
  border-color: #475569;
  color: #cbd5e1;
}

.btn-secondary:hover {
  background-color: #475569;
  border-color: #64748b;
  color: #fff;
}

.custom-footer {
  background-color: #1e293b;
  color: #cbd5e1;
  border-top: 1px solid #334155;
}

.custom-footer a {
  color: #60a5fa;
  text-decoration: none;
}

.custom-footer a:hover {
  color: #93c5fd;
}

/* Map Page Styles */
.map-container {
  padding: 20px;
}

.map-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

#map {
  width: 70%;
  height: 500px;
  background-color: #333;
  color: #fff;
  text-align: center;
  padding: 20px;
  border-radius: 5px;
}

.legend {
  width: 25%;
  padding: 15px;
  background-color: #1e293b;
  border-radius: 5px;
}

.legend h3 {
  color: #cbd5e1;
  margin-bottom: 10px;
}

.legend ul {
  list-style: none;
  padding: 0;
}

.legend li {
  margin-bottom: 8px;
}

.legend-color {
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-left: 5px;
  border-radius: 50%;
}

.navigation-buttons {
  margin-top: 20px;
  text-align: center;
}

.navigation-buttons button {
  margin: 0 5px;
}

/* Dark theme styling for the login/register form */
.dark-form {
  background-color: #1e293b; /* Dark background */
  color: #cbd5e1; /* Light gray text */
  border: 1px solid #334155;
  padding: 20px; /* Add some padding around the form */
  border-radius: 8px; /* Optional: Rounded corners */
}

.dark-form h2 {
  color: #fff;
  margin-bottom: 20px;
}

/* Style form labels for better visibility */
.dark-form label {
  color: #cbd5e1;
  margin-bottom: 5px;
  display: block; /* Ensure labels are on their own line */
}

/* Style form controls (input fields) */
.dark-form .form-control {
  background-color: #334155; /* Dark input background */
  color: #fff; /* White text color */
  border: 1px solid #475569; /* Slightly lighter border */
  border-radius: 5px;
  padding: 8px;
  margin-bottom: 15px; /* Add spacing between inputs */
  width: 100%; /* Make inputs full width */
}

.dark-form .form-control:focus {
  background-color: #475569; /* Darker background on focus */
  border-color: #64748b; /* Darker border on focus */
  box-shadow: none; /* Remove default box-shadow */
}

/* Style the "Remember me" checkbox and label */
.dark-form .remember-me {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.dark-form .remember-me input[type="checkbox"] {
  margin-right: 5px;
}

.dark-form .remember-me label {
  margin-bottom: 0; /* Reset label margin */
}

/* Style the submit button */
.dark-form .btn-primary {
  background-color: #3b82f6; /* Blue button */
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  cursor: pointer;
  transition: background-color 0.2s ease; /* Smooth transition for hover */
}

.dark-form .btn-primary:hover {
  background-color: #2563eb; /* Darker blue on hover */
}

/* Style the "Create an Account" and "Forgot Password?" links */
.dark-form .auth-links {
  margin-top: 20px;
  text-align: center;
}

.dark-form .auth-links a {
  color: #60a5fa; /* Light blue color */
  text-decoration: none; /* Remove underlines */
  margin: 0 10px;
}

.dark-form .auth-links a:hover {
  text-decoration: underline; /* Add underline on hover */
}

.btn-primary {
  background-color: #2563eb; /* Blue button */
  border-color: #2563eb; /* Blue border */
  color: #fff;
}

.btn-primary:hover {
  background-color: #1e40af; /* Darker blue on hover */
  border-color: #1e40af; /* Darker blue border */
}

{{extend 'layout.html'}}

<h1>Manage Maintenance</h1>

<!-- Add Maintenance Button -->
<button class="btn btn-primary mb-3" data-toggle="modal" data-target="#addMaintenanceModal">Add Maintenance</button>

<!-- Maintenance Tables by Category -->
<div class="accordion" id="maintenanceAccordion">
  {{for category, records in maintenance_by_category.items():}}
  <div class="card">
    <div class="card-header" id="heading{{=category.replace(' ', '')}}">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{=category.replace(' ', '')}}" aria-expanded="true">
          {{=category}} ({{=len(records)}})
        </button>
      </h2>
    </div>
    <div id="collapse{{=category.replace(' ', '')}}" class="collapse show" data-parent="#maintenanceAccordion">
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Equipment</th>
              <th>Title</th>
              <th>Description</th>
              <th>Required Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{for maintenance in records:}}
            <tr data-id="{{=maintenance.get('id', '')}}">
              <td>{{=maintenance.get('equipment_name', 'Unknown Equipment')}}</td>
              <td>{{=maintenance.get('title', 'Untitled')}}</td>
              <td>{{=maintenance.get('description', 'No Description')}}</td>
              <td>{{=maintenance.get('required_status', 'Unknown')}}</td>
              <td>
                <button class="btn btn-sm btn-warning edit-btn" data-id="{{=maintenance.get('id', '')}}" data-toggle="modal" data-target="#editMaintenanceModal">Edit</button>
                <button class="btn btn-sm btn-danger delete-btn" data-id="{{=maintenance.get('id', '')}}">Delete</button>
              </td>
            </tr>
            {{pass}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {{pass}}
</div>

<!-- Add Maintenance Modal -->
<div class="modal fade" id="addMaintenanceModal" tabindex="-1" role="dialog" aria-labelledby="addMaintenanceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addMaintenanceModalLabel">Add Maintenance</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addMaintenanceForm">
          <div class="form-group">
            <label for="equipmentSelect">Equipment</label>
            <select class="form-control" id="equipmentSelect" required>
              {{for equipment in equipments:}}
              <option value="{{=equipment.id}}">{{=equipment.name}} ({{=equipment.category}})</option>
              {{pass}}
            </select>
          </div>
          <div class="form-group">
            <label for="maintenanceTitle">Title</label>
            <input type="text" class="form-control" id="maintenanceTitle" required>
          </div>
          <div class="form-group">
            <label for="maintenanceDescription">Description</label>
            <textarea class="form-control" id="maintenanceDescription" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="maintenanceStatus">Required Status</label>
            <select class="form-control" id="maintenanceStatus">
              <option value="Energized">Energized</option>
              <option value="De-energized">De-energized</option>
            </select>
          </div>
          <button type="submit" class="btn btn-success">Add Maintenance</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Attach event listeners when page loads
    attachEventListeners();
  });

  function attachEventListeners() {
    // Edit Button Functionality
    document.querySelectorAll('.edit-btn').forEach(button => {
      button.addEventListener('click', function () {
        const maintenanceId = this.getAttribute('data-id');
        fetch('{{=URL("default", "get_maintenance")}}?id=' + maintenanceId)
          .then(response => response.json())
          .then(data => {
            if (data.status === 'success') {
              document.getElementById('editMaintenanceId').value = data.maintenance.id;
              document.getElementById('editEquipmentSelect').value = data.maintenance.equipment_id;
              document.getElementById('editMaintenanceTitle').value = data.maintenance.title;
              document.getElementById('editMaintenanceDescription').value = data.maintenance.description;
              document.getElementById('editMaintenanceStatus').value = data.maintenance.required_status;
              $('#editMaintenanceModal').modal('show'); // Show modal
            } else {
              alert('Error loading maintenance details');
            }
          });
      });
    });

    // Save Edit Changes
    document.getElementById('editMaintenanceForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const formData = new URLSearchParams({
        id: document.getElementById('editMaintenanceId').value,
        equipment_id: document.getElementById('editEquipmentSelect').value,
        title: document.getElementById('editMaintenanceTitle').value,
        description: document.getElementById('editMaintenanceDescription').value,
        required_status: document.getElementById('editMaintenanceStatus').value
      });

      fetch('{{=URL("default", "edit_maintenance")}}', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: formData
      })
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            alert('Maintenance updated successfully!');
            location.reload();
          } else {
            alert('Error: ' + data.message);
          }
        });
    });

    // Delete Button Functionality
    document.querySelectorAll('.delete-btn').forEach(button => {
      button.addEventListener('click', function () {
        if (confirm("Are you sure you want to delete this maintenance item?")) {
          const maintenanceId = this.getAttribute('data-id');

          fetch('{{=URL("default", "delete_maintenance")}}', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams({ id: maintenanceId })
          })
            .then(response => response.json())
            .then(data => {
              if (data.status === 'success') {
                alert('Maintenance deleted successfully!');
                location.reload();
              } else {
                alert('Error: ' + data.message);
              }
            });
        }
      });
    });
  }
</script>

# =============================================================================
# Maintenance Dashboard - Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize the values for your environment
# This file contains all configurable settings for the application

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-immediately
ALLOWED_HOSTS=localhost,127.0.0.1,dev.maintenance.errorlog.app,maintenance.errorlog.app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database Type (True for SQLite, False for PostgreSQL)
USE_SQLITE=False

# PostgreSQL Settings
DB_NAME=maintenance_dashboard
DB_USER=maintenance_user
DB_PASSWORD=SecureProdPassword2024!
DB_HOST=db
DB_PORT=5432
POSTGRES_PASSWORD=SecureProdPassword2024!

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL (if not provided, will be built from components below)
REDIS_URL=redis://redis:6379/0

# Redis Components (used if REDIS_URL not provided)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Usage
USE_REDIS=True

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# Celery Broker and Result Backend (if not provided, uses REDIS_URL)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Celery Worker Settings
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@maintenance-dashboard.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CSRF Settings
CSRF_TRUSTED_ORIGINS=https://maintenance.errorlog.app,https://www.maintenance.errorlog.app,https://dev.maintenance.errorlog.app

# Proxy Settings
USE_X_FORWARDED_HOST=True
USE_X_FORWARDED_PORT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# =============================================================================
# ADMIN USER CREATION
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@maintenance.errorlog.app
ADMIN_PASSWORD=SecureAdminPassword2024!

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=errorlog.app

# =============================================================================
# SYSTEM MONITORING
# =============================================================================
MONITORING_ENABLED=True
MONITORING_SLOW_REQUEST_THRESHOLD=5.0
MONITORING_VERY_SLOW_REQUEST_THRESHOLD=10.0
MONITORING_CPU_THRESHOLD=80.0
MONITORING_MEMORY_THRESHOLD=80.0
MONITORING_DISK_THRESHOLD=90.0

# =============================================================================
# DOCKER LOGS CONFIGURATION
# =============================================================================
DOCKER_LOGS_ENABLED=False
DOCKER_LOGS_DEBUG_ONLY=True
DOCKER_LOGS_MAX_LINES=1000
DOCKER_LOGS_RATE_LIMIT=10
DOCKER_LOGS_TIMEOUT=30
DOCKER_LOGS_REQUIRE_SUPERUSER=True

# =============================================================================
# MIGRATION CONFIGURATION
# =============================================================================
MIGRATION_CONFLICT_RESOLUTION=True
AUTO_MERGE_MIGRATIONS=True
FORCE_MIGRATION_MERGE=False
MAX_RETRIES=30
RETRY_DELAY=5
SKIP_DB_INIT=False
SKIP_COLLECTSTATIC=False

# =============================================================================
# BRANDING SYSTEM CONFIGURATION
# =============================================================================
BRANDING_AUTO_SETUP=True
BRANDING_SITE_NAME=Maintenance Dashboard
BRANDING_SITE_TAGLINE=Professional Maintenance Management System
BRANDING_WINDOW_TITLE_PREFIX=Maintenance Dashboard
BRANDING_WINDOW_TITLE_SUFFIX=ErrorLog.app
BRANDING_HEADER_BRAND_TEXT=Maintenance Dashboard
BRANDING_PRIMARY_COLOR=#4299e1
BRANDING_SECONDARY_COLOR=#2d3748
BRANDING_ACCENT_COLOR=#3182ce

# =============================================================================
# GIT VERSION INFORMATION
# =============================================================================
# These are typically set by your CI/CD pipeline or build script
GIT_COMMIT_COUNT=414
GIT_COMMIT_HASH=11e13c5
GIT_BRANCH=latest
GIT_COMMIT_DATE=2025-09-02

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment and modify these for development environment
